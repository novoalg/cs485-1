<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row text-center">
    <div class="small-8 small-centered columns">
      <h2>Sign Up!</h2>  

      <%= devise_error_messages! %>

      <div class="row">
        <div class="small-12 columns">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>

      <div class="row">
        <div class="small-12 medium-6 columns">
          <%= f.label :password %> 
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
        <div class="small-12 medium-6 columns">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      </div>

      <div class="row">
        <div class="small-12 columns text-center">
          <% if @validatable %><em>Passwords must be <%= @minimum_password_length %> characters in length</em><% end %>
        </div>
      </div>

      <div class="row text-center">
        <div class="small-12 columns">
          <hr />
          <%= f.check_box :receive_emails %>
          <%= f.label :receive_emails, "Yes, I would like to receive emails from Silver & Stones." %>
        </div>
      </div>

      <br />

      <div class="row">
        <div class="small-12 columns">
          <%= f.submit "Sign Up", class: "button expand" %>
        </div>
      </div>

      <%= render "devise/shared/links" %>

    </div>
  </div>
<% end %>

