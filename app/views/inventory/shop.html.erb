<div class="row" data-equalizer>
  <div class="large-3 small-12 columns text-center">
    <div class="panel" data-equalizer-watch>
      <%= label_tag "Category" %>
      <%= collection_select(:item_category, :category_id, @item_categories, :id, :name, { :selected => @category.id }) %>
      <%= submit_tag "Change", class: "button tiny expand" %>
    </div>
  </div> 

  <div class="large-9 small-12 columns">
    <div class="panel text-center" data-equalizer-watch>
      <h2><%= @category.name %></h2>
      <p><%= @category.description %></p>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <div class="panel">

    </div>
  </div>
</div>
