<h1>Item Categories</h1>

<h2>Active</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
        <th class="show-for-medium-up">Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @active_item_categories.each do |item_category| %>
      <tr>
        <td><%= item_category.name %></td>
        <label class="show-for-medium-up">
          <td class="show-for-medium-up"><%= item_category.description %></td>
        </label>
        <td>
          <%= link_to item_category do %>
            <i class="fa fa-image"></i> 
            <label class="show-for-medium-up">Show</label>
          <% end %>
        </td>
        <td>
          <%= link_to edit_item_category_path(item_category) do %>
            <i class="fa fa-edit"></i> 
            <label class="show-for-medium-up">Edit</label>
          <% end %>
        </td>
        <td>
          <%= link_to controller: "item_categories", :action => "toggle_activeness", :id => item_category do %>
            <i class="fa fa-power-off"></i> 
            <label class="show-for-medium-up">Deactivate</label>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h2>Inactive</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @inactive_item_categories.each do |item_category| %>
      <tr>
        <td><%= item_category.name %></td>
        <td><%= item_category.description %></td>
        <td>
          <%= link_to, item_category do %>
            <i class="fa fa-image"></i> 
            <label class="show-for-medium-up">Show</label>
          <% end %>
        </td>
        <td>
          <%= link_to edit_item_category_path(item_category) do %>
            <i class="fa fa-edit"></i> 
            <label class="show-for-medium-up">Edit</label>
          <% end %>
        </td>
        <td>
          <%= link_to item_category, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-trash"></i>
            <label class="show-for-medium-up">Edit</label>
          <% end %>
       </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


