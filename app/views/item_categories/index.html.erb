<h1>Item Categories</h1>

<h2>Active</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @active_item_categories.each do |item_category| %>
      <tr>
        <td><%= item_category.name %></td>
        <td><%= item_category.description %></td>
        <td><%= link_to 'Show', item_category %></td>
        <td><%= link_to 'Edit', edit_item_category_path(item_category) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h2>Inactive</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @inactive_item_categories.each do |item_category| %>
      <tr>
        <td><%= item_category.name %></td>
        <td><%= item_category.description %></td>
        <td><%= link_to 'Show', item_category %></td>
        <td><%= link_to 'Edit', edit_item_category_path(item_category) %></td>
        <td><b><%= link_to 'Destroy', item_category, method: :delete, data: { confirm: 'Are you sure?' } %></b></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


