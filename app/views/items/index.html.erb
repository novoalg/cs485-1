<h1>Active Item List</h1>

<table>
  <thead>
    <tr>
      <th >Name</th>
      <th class="show-for-medium-up">Description</th>
      <th >Price</th>
      <th >Stock</th>
      <th colspan="3">Actions</th>

    </tr>
  </thead>

  <tbody>
    <% @active_items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td class="show-for-medium-up"><%= item.description %></td>
      <td><%= item.price %></td>
      <td><%= item.in_stock %></td>
      <td>
        <%= link_to item do %>
          <i class="fa fa-image"></i>
          <label class="show-for-medium-up">Show</label>
        <% end %>
      </td>
      <td>
        <%= link_to edit_item_path(item) do %>
          <i class="fa fa-edit"></i> 
          <label class="show-for-medium-up">Edit</label>
        <% end %>
      </td>
      <td>
        <%= link_to 'Deactivate', controller: "items", :action => "toggle_activeness", :id => item do %>
          <i class="fa fa-close"></i> 
          <label class="show-for-medium-up">Deactivate</label>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Inactive Item List</h1>

<table>
  <thead>
    <tr>
      <th >Name</th>
      <th class="show-for-medium-up">Description</th>
      <th >Price</th>
      <th >Stock</th>
      <th colspan="4">Actions</th>

    </tr>
  </thead>

  <tbody>
    <% @inactive_items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td class="show-for-medium-up"><%= item.description %></td>
      <td><%= item.price %></td>
      <td><%= item.in_stock %></td>
      <td>
        <%= link_to item do %>
          <i class="fa fa-image"></i> 
          <label class="show-for-medium-up">Show</label>
        <% end %> 
      </td>
      <td>
        <%= link_to edit_item_path(item) do %>
          <i class="fa fa-edit"></i> 
          <label class="show-for-medium-up">Edit</label>
        <% end %>
      </td>
      <td>
        <%= link_to controller: "items", :action => "toggle_activeness", :id => item do %>
          <i class="fa fa-check"></i> 
          <label class="show-for-medium-up">Activate</label>
        <% end %>
      </td>
      <td>
        <%= link_to item, method: :delete, data: { confirm: 'Are you sure you want to delete this item?' } do %>
          <i class="fa fa-trash">  </i>
          <label class="show-for-medium-up">Destroy</label>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>