<div class="panel">
  <h1>Active Item List</h1>

  <table id="active-items">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Stock</th>
        <% if role_edit? %>
          <th>Edit</th>
        <% end %>
        <% if role_delete? %>
          <th>Deactivate</th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @active_items.each do |item| %>
      <tr>
        <td>
          <%= link_to item do %>
            <%= item.name %>
          <% end %>
        </td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= item.in_stock %></td>
        <% if role_edit? %>
          <td>
            <%= link_to edit_item_path(item) do %>
              <i class="fa fa-edit"></i> 
              <label class="show-for-medium-up">Edit</label>
            <% end %>
          </td>
        <% end %>
        <% if role_delete? %>
          <td>
            <%= link_to controller: "items", :action => "toggle_activeness", :id => item do %>
              <i class="fa fa-power-off"></i> 
              <label class="show-for-medium-up">Deactivate</label>
            <% end %>
          </td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="panel">
  <h1>Inactive Item List</h1>

  <table id="inactive-items">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Stock</th>
        <% if role_edit? %>
          <th>Edit</th>
        <% end %>
        <% if role_delete? %>
          <th>Activate</th>
          <th>Destroy</th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @inactive_items.each do |item| %>
      <tr>
        <td>
          <%= link_to item do %>
            <%= item.name %>
          <% end %>
        </td>
        <td><%= item.price %></td>
        <td><%= item.in_stock %></td>
        <% if role_edit? %>
          <td>
            <%= link_to edit_item_path(item) do %>
              <i class="fa fa-edit"></i> 
              <label class="show-for-medium-up">Edit</label>
            <% end %>
          </td>
        <% end %>
        <% if role_delete? %>
          <td>
            <%= link_to controller: "items", :action => "toggle_activeness", :id => item do %>
              <i class="fa fa-check"></i> 
              <label class="show-for-medium-up">Activate</label>
            <% end %>
          </td>
          <td>
            <%= link_to item, method: :delete, data: { confirm: 'Are you sure you want to delete this item?' } do %>
              <i class="fa fa-trash">  </i>
              <label class="show-for-medium-up">Destroy</label>
            <% end %>
          </td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>