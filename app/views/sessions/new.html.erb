<br />

<div class="row">
  <div class="small-12 medium-6 columns small-centered text-center">
    <h3>Please Log In</h3>
  </div>
</div>

<div class="row">
  <div class="small-12 medium-6 columns small-centered">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.text_field "username", id: "username", placeholder: "Username", class: "text-center" %>
      <%= f.password_field "password", id: "password", placeholder: "Password", class: "text-center"  %>
      <%= f.submit "Log In", class: "button expand", id: "login" %>
  <% end %>
  </div>
    <div align="center">
        <b>Not registered?</b>
        <%= link_to "Click here!", new_user_path %>
    </div>
</div>
    
