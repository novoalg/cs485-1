<% content_for :title, "About Us" %>
<% description "A short history of Silver & Stones Gallery." %>
<div class="row">
  <div class="large-12 columns">
    <%= image_tag @header.picture.url(:banner), id: "about-us-img" %>
    <br /><br />
    <div class="panel text-center">
      <% if role_edit? %>
        <%= link_to edit_page_section_path(@header), class: "button expand" do %>
          <i class="fa fa-edit"></i>&emsp;Edit Section
        <% end %>
      <% end %>
      <h1><%= @header.title %></h1>
      <p><%= @header.text %></p>
    </div>
    <hr>
  </div>
</div>
 
<div class="row" data-equalizer>
  <div class="large-4 columns" data-equalizer-watch>
    <%= image_tag @first.picture.url(:medium) %>
  </div>
  <div class="large-8 columns" >
    <div class="panel" data-equalizer-watch>
      <% if role_edit? %>
        <%= link_to edit_page_section_path(@first), class: "button expand" do %>
          <i class="fa fa-edit"></i>&emsp;Edit Section
        <% end %>
      <% end %>
      <h4><%= @first.title %></h4>
      <div class="row">
        <div class="small-12 columns" id="history">
          <p><%= @first.text %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row" data-equalizer>
  <div class="large-8 columns" >
    <div class="panel" data-equalizer-watch>
      <% if role_edit? %>
        <%= link_to edit_page_section_path(@second), class: "button expand" do %>
          <i class="fa fa-edit"></i>&emsp;Edit Section
        <% end %>
      <% end %>
      <h4><%= @second.title %></h4>
      <p><%= @second.text %></p>
    </div>
  </div>
  <div class="large-4 columns" data-equalizer-watch>
    <%= image_tag @second.picture.url(:medium) %>
  </div>
</div>