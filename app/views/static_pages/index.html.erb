    <p><%= @texts[4].text %></p>
  </div>
  <div class="small-12 medium-4 columns">
    <%= image_tag "static_pages/panel5.jpg" %>
    <h4 class="text-center">Fantastic Gifts</h4>
    <p><%= @texts[5].text %></p>
  </div>
  <div class="small-12 medium-4 columns">
    <%= image_tag "static_pages/panel6.jpg" %>
    <h4 class="text-center">Beautiful Art</h4>
    <p><%= @texts[6].text %></p>
  </div>
</div>
