<% content_for :title, "Home" %>
<% description "Silver & Stones Gallery is a perfect place to shop for special gifts or treasures from your home." %>

<% if @headline.active %>
<div class="row text-center">
  <div class="small-12 columns">
    <div data-alert class="alert-box breaking">
      <%= raw @headline.text %>
    </div>
  </div>
</div>
<% end %>

<div class="row">
  <div class="small-12 columns">
    <ul id="welcome-slider">
      <li><%= image_tag "static_pages/storefront.jpg" %></li>
      <% for i in 1..5 do %>
        <li><%= image_tag "static_pages/store#{i}.jpg" %></li>
      <% end %>
    </ul>
  </div>
</div>

<hr/>

<div class="row">
  <div class="small-12 columns">
    <p><%= @description.text %></p>
  </div>
</div>

<hr />

<ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-3">
  <% @entries.each_with_index do | entry, i | %>
  <li>
    <% if role_edit? %>
      <a href="#" data-reveal-id="static-<%= entry.id %>-modal" class="button tiny expand">
        <i class="fa fa-edit"></i>&emsp;Edit Text
      </a>
    <% end %>
    <div class="text-center"><%= image_tag "static_pages/panel#{i + 1}.jpg" %></div>
    <h4 class="text-center"><%= entry.title %></h4>
    <p><%= entry.text %></p>
  </li>
  <% end %>
</ul>

<% if role_edit? %>
  <% @entries.each do | entry | %>
    <%= render :partial => 'static_texts/edit', :locals => { :entry => entry } %>
  <% end %>
<% end %>