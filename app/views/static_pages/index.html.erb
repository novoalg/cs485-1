<% content_for :title, "Home" %>
<% description "Silver & Stones Gallery is a perfect place to shop for special gifts or treasures from your home." %>

<% if @headline.active %>
<div class="row text-center">
  <div class="small-12 columns">
    <div data-alert class="alert-box breaking">
      <%= raw @headline.text %>
    </div>
  </div>
</div>
<% end %>

<div class="row">
  <div class="small-12 columns">
    <ul id="welcome-slider">
      <li><%= image_tag "static_pages/storefront.jpg" %></li>
      <li><%= image_tag "static_pages/store1.jpg" %></li>
      <li><%= image_tag "static_pages/store2.jpg" %></li>
      <li><%= image_tag "static_pages/store3.jpg" %></li>
      <li><%= image_tag "static_pages/store4.jpg" %></li>
      <li><%= image_tag "static_pages/store5.jpg" %></li>
    </ul>
  </div>
</div>

<hr/>

<div class="row">
  <div class="small-12 columns">
    <p><%= @texts[0].text %></p>
  </div>
</div>

<hr />
 
<div class="row">
  <div class="small-12 medium-4 columns">
    <%= image_tag "static_pages/panel1.jpg" %>
    <h4 class="text-center">Home Accents</h4>
    <p><%= @texts[1].text %></p>
  </div>
  <div class="small-12 medium-4 columns">
    <%= image_tag "static_pages/panel2.jpg" %>
    <h4 class="text-center">Handmade Jewelry</h4>
    <p><%= @texts[2].text %></p>
  </div>
  <div class="small-12 medium-4 columns">
