<div class="large-8 columns">
<h1>Users</h1>
    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
                <% @users.each do |user| %>
                    <tr>
                        <td><%=user.username%></td>
                        <td><%=user.email%></td>
                        <%= form_tag set_role_path(user) do %>
                            <td><%= select_tag "role", options_from_collection_for_select(@roles, "id", "name") %></td>
                        <% end %>
                    </tr>
                <% end %>
        </tbody>
    </table>
</div>
