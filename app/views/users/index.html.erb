<div class="small-12 columns">
  <h1>Users</h1>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th colspan="2">Role</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.email, user %></td>
        <%= form_for user do |form| %>
          <td><%= form.select "role_id", options_from_collection_for_select(@roles, "id", "name", :selected => user.role_id) %></td>
          <td><%= form.submit "Update" %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
